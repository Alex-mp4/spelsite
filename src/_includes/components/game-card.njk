<article class="gamecard flow">
    <img 
        src="/img/{{ year }}/{{ game.team | slug }}/{{ game.image }}"
        alt="Skärmdump av spelet {{ game.title }}.">
    <header>
        <h3>
            {{ game.title }}
        </h3>
        <p>Skapat av: {{ game.creators | listCreators }}</p>
    </header>
    <div class="gamecard__body">
        {% if game.description %}
        <p>
            {{ game.description }}
        </p>
        {% endif %}
        {% set team = teams | getTeam(game.team) %}
        <p>Konceptet är utvecklat av <span class="gamecard__teamname">
            {{ team.team }}</span>: 
            <span>{{ team.members | listCreators }}</span>.</p>
        <p>Koden finns på <a href="{{ game.git }}" target="_blank">GitHub</a>.</p>
    </div>
    <footer>
        <a class="button button-link" href="{{ game.url }}" target="_blank">Spela {{ game.title }}</a>
    </footer>
</article>